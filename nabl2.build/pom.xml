  <modules>
    <module>../nabl2.example</module>
    <module>../nabl2.ext.coq</module>
    <module>../nabl2.ext.coq.eclipse</module>
    <module>../nabl2.ext.dynsem</module>
    <module>../nabl2.ext.dynsem.eclipse</module>
    <module>../nabl2.lang</module>
    <module>../nabl2.lang.eclipse</module>
