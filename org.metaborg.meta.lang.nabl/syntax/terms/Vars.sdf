module terms/Vars
imports common/Identifiers terms/Terms

exports
  sorts Wld Var VarRef

  context-free syntax
    "_" -> Wld    {cons("Wld")}
    Wld -> Var    
    Id  -> Var    {cons("Var")}
    LId -> Var    {cons("ListVar")}
    Id  -> VarRef {cons("VarRef")}
    LId -> VarRef {cons("ListVarRef")}

  context-free restrictions
    Wld -/- [a-zA-Z0-9\'\-\_]