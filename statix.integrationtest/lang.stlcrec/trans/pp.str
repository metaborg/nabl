module pp

imports

  libstratego-gpp
  libspoofax/sdf/pp
  libspoofax/editor/refactoring/-
  pp/STLCrec-parenthesize
  pp/STLCrec-pp

  statix/api

rules

  editor-format:
    (node, _, ast, path, project-path) -> (filename, result)
    with
      ext      := <get-extension> path
    ; filename := <guarantee-extension(|$[pp.[ext]])> path
    ; result   := <pp-STLCrec-string> node

rules
  
  pp-STLCrec-string =
    parenthesize-STLCrec
    ; prettyprint-STLCrec-start-symbols
    ; !V([], <id>)
    ; box2text-string(|120)
      
  pp-partial-STLCrec-string =
    parenthesize-STLCrec
    ; prettyprint-STLCrec
    ; !V([], <id>)
    ; box2text-string(|120)
    
  pp-partial-STLCrec-string(|sort) =
    parenthesize-STLCrec
    ; prettyprint-STLCrec(|sort)
    ; !V([], <id>)
    ; box2text-string(|120)  

rules

  pp-generated = pp-partial-STLCrec-string

  pp-one(pp)   = stx-prettyprint-term
  pp-one-V(pp) = stx-prettyprint-term
  pp-one-Z(pp) = stx-prettyprint-term
  
  pp-option(pp) = stx-prettyprint-term

  pp-V-list(pp)         = stx-prettyprint-term
  pp-V-list(pp|vs)      = stx-prettyprint-term
  pp-V-list(pp|vs, sep) = stx-prettyprint-term
  
  pp-H-list(pp)     = stx-prettyprint-term
  pp-H-list(pp|sep) = stx-prettyprint-term
  
  pp-HV-list(pp)     = stx-prettyprint-term
  pp-HV-list(pp|sep) = stx-prettyprint-term
  
  pp-HZ-list(pp)     = stx-prettyprint-term
  pp-HZ-list(pp|sep) = stx-prettyprint-term
  
  prettyprint-STCLrec-ID      = stx-prettyprint-term
  prettyprint-STCLrec-Exp     = stx-prettyprint-term
  prettyprint-STCLrec-Bind    = stx-prettyprint-term
  prettyprint-STCLrec-TypeExp = stx-prettyprint-term
  prettyprint-STCLrec-Decl    = stx-prettyprint-term
  prettyprint-STCLrec-Type    = stx-prettyprint-term

rules
  
  construct-textual-change = construct-textual-change(pp-partial-STLCrec-string, parenthesize, override-reconstruction, resugar)
